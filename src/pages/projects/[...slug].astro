---
import { getCollection, render } from "astro:content";
import MarkdownPostLayout from "@layouts/MarkdownProjectLayout.astro";
import { omitDraftEntries } from "@utils/content";
import ImageGallery from "@components/ImageGallery.astro";

export const prerender = true;

export async function getStaticPaths() {
  const projects = await getCollection("projects", omitDraftEntries);
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);
---

<MarkdownPostLayout frontmatter={project.data}>
  <Content />
  <ImageGallery />
</MarkdownPostLayout>
